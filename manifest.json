{
    "name": "weibo.ext",
    "version": "1.0",
    "description": "Chrome extension for weibo",
    "manifest_version": 2,
    "icons": {
        "16": "img/favicon16.png",
        "48": "img/favicon48.png",
        "128": "img/icon128.ico"
    },
    "browser_action": {
        "default_icon": "img/favicon16.png",
        "default_popup": "popup.html",
        "default_title": "Chrome extension for weibo. Powered by Leo."
    },
    "background": {
        "scripts": ["background.js", "js/util.js"],
        "persistent": false
    },
    "options_ui": {
        "page": "setup.html",
        "chrome_style": true
    },
    "content_scripts": [{
        "include_globs": ["*"],
        "matches": ["*://*.weibo.com/*"],
        "js": ["js/blockPerson.js"],
        "css": ["css/weibo.css"],
        "run_at": "document_end"
    }],
    "permissions": ["*://*.weibo.com/*", "cookies", "notifications", "tabs", "storage"]
}